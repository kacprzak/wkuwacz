<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <dependencySets>
    <dependencySet>
      <outputDirectory>libs</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>junit:junit</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>src/main/shell</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>**/*.bat</include>
        <include>**/*.sh</include>
        <include>**/*.txt</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>

